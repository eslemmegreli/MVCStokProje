@model MvcStok.Models.Entity.tblUrunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>ÜRÜN ADI</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="30" />
    </div>
    <div>
        <label>MARKASI</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Marka Giriniz" required="" />
    </div>
    <div>
        <label>KATEGORİ SEÇİNİZ</label>
        @Html.DropDownListFor(m => m.tblKategori.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })  @* viewbag ile taşımış olduğum dgr komutundan listeden ögeleri seç*@
    </div>
    <div>
        <label>FİYATI</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>
    <div>
        <label>STOK ADETİ</label>
        <input type="text" class="form-control" name="STOK" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Ürün Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Ürün Ekleme İşlemi Yapıldı.');
        });
    </script>
</form>

